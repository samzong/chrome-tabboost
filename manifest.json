{
  "manifest_version": 3,
  "name": "TabBoost",
  "version": "2.1.0",
  "description": "TabBoost is a Chrome extension that helps you manage your tabs more efficiently.",
  "permissions": [
    "activeTab",
    "storage",
    "commands",
    "notifications",
    "clipboardWrite",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/js/contentScript.js"],
      "css": ["src/styles/popupStyles.css", "src/styles/splitViewStyles.css"],
      "run_at": "document_start"
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https://*.google.com; default-src 'self'; connect-src 'self' https://*.google.com; frame-src 'self'; font-src 'self'; form-action 'none'; base-uri 'none'; upgrade-insecure-requests;",
    "sandbox": "sandbox allow-scripts allow-forms allow-popups allow-modals; script-src 'self'; object-src 'none'"
  },
  "action": {
    "default_icon": {
      "16": "src/assets/icons/icon16.png",
      "48": "src/assets/icons/icon48.png",
      "128": "src/assets/icons/icon128.png"
    },
    "default_popup": "src/popup/popup.html"
  },
  "options_page": "src/options/options.html",
  "background": {
    "service_worker": "src/js/background.js",
    "type": "module"
  },
  "icons": {
    "16": "src/assets/icons/icon16.png",
    "48": "src/assets/icons/icon48.png",
    "128": "src/assets/icons/icon128.png"
  },
  "commands": {
    "duplicate-tab": {
      "suggested_key": {
        "default": "Ctrl+M",
        "mac": "Ctrl+M"
      },
      "description": "复制当前标签页"
    },
    "copy-url": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "Shift+Command+C"
      },
      "description": "复制当前标签页网址"
    },
    "toggle-split-view": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Shift+Command+S"
      },
      "description": "切换分屏模式"
    },
    "open-options": {
      "description": "打开插件配置页"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["src/styles/splitViewStyles.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
