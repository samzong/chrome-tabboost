{
  "name": "chrome-tabboost",
  "version": "2.5.2",
  "description": "A Chrome extension for tab management",
  "main": "src/js/background.js",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "dev": "webpack --mode development",
    "clean": "rimraf build builds",
    "zip": "cross-env NODE_ENV=production npm run build && node scripts/zip.js",
    "package": "cross-env NODE_ENV=production npm run build && node scripts/package.js",
    "validate": "npm run build && node scripts/validate.js",
    "release": "npm run validate && npm run zip",
    "publish": "node scripts/publish.js",
    "publish:test": "cross-env PUBLISH_TARGET=trusted-testers node scripts/publish.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "version:patch": "node scripts/version-bump.js patch",
    "version:minor": "node scripts/version-bump.js minor",
    "version:major": "node scripts/version-bump.js major",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "version": "npm run changelog && git add CHANGELOG.md",
    "prerelease": "node scripts/pre-release-checklist.js",
    "commit": "cz",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,css,md,json}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,css,md,json}\""
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@commitlint/cli": "^18.6.0",
    "@commitlint/config-conventional": "^18.6.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "adm-zip": "^0.5.10",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "chalk": "4.1.2",
    "chrome-webstore-upload": "^3.1.4",
    "chrome-webstore-upload-cli": "^2.2.2",
    "commitizen": "^4.3.0",
    "conventional-changelog-angular": "^5.0.13",
    "conventional-changelog-cli": "^4.1.0",
    "copy-webpack-plugin": "^12.0.2",
    "cross-env": "^7.0.3",
    "crx": "^5.0.1",
    "css-loader": "^6.10.0",
    "cz-conventional-changelog": "^3.3.0",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "html-webpack-plugin": "^5.6.0",
    "husky": "^9.1.7",
    "jest": "^27.5.1",
    "jest-chrome": "^0.8.0",
    "jest-environment-jsdom": "^27.5.1",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "semver": "^7.6.0",
    "style-loader": "^3.3.4",
    "web-ext": "^7.11.0",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "overrides": {
    "chalk": "4.1.2"
  },
  "engines": {
    "node": ">=22"
  }
}
