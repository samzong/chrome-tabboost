{
  "name": "chrome-tabboost",
  "version": "2.1.0",
  "description": "A Chrome extension for tab management",
  "main": "src/js/background.js",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "clean": "rimraf dist builds",
    "zip": "cross-env NODE_ENV=production npm run build && node scripts/zip.js",
    "package": "cross-env NODE_ENV=production npm run build && node scripts/package.js",
    "validate": "npm run build && node scripts/validate.js",
    "release": "npm run validate && npm run zip",
    "publish": "node scripts/publish.js",
    "publish:test": "cross-env PUBLISH_TARGET=trusted-testers node scripts/publish.js"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "babel-loader": "^9.1.3",
    "copy-webpack-plugin": "^12.0.2",
    "crx": "^5.0.1",
    "css-loader": "^6.10.0",
    "html-webpack-plugin": "^5.6.0",
    "style-loader": "^3.3.4",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2",
    "adm-zip": "^0.5.10",
    "chrome-webstore-upload-cli": "^2.2.2",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5",
    "web-ext": "^7.11.0",
    "dotenv": "^16.4.5",
    "semver": "^7.6.0"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
